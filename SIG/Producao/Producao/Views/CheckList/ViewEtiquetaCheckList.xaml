                        Command="{Binding Source={x:Static Member=local:ContextMenuCommands.PrintEtiqueta}}" 
                        CommandParameter="{Binding}"
                        Header="Imprimir" />
                </ContextMenu>
            </syncfusion:SfDataGrid.HeaderContextMenu>
-->
            
        </syncfusion:SfDataGrid>



    </Grid>
</UserControl>
