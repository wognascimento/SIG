<Window x:Class="Producao.Views.PopUp.ModeloSetoresOrdemServico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Producao.Views.PopUp" 
        xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="SETORES PARA EMISSÃO DA OERDEM DE SERVIÇO" Height="450" Width="450" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded" ResizeMode="NoResize">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Syncfusion:SfDataGrid 
            x:Name="dgItens"
            Grid.Row="0"
            AllowResizingColumns="True" 
            AllowDraggingColumns="True" 
            AutoGenerateColumns="False" 
            FontSize="10" 
            SelectedItem="{Binding Iteme, Mode=TwoWay}"
            ItemsSource="{Binding Itens}" 
            PreviewKeyDown="dgItens_PreviewKeyDown" 
            AllowEditing="True" 
            AddNewRowInitiating="dgItens_AddNewRowInitiating" 
            AddNewRowPosition="None" 
            CurrentCellDropDownSelectionChanged="dgItens_CurrentCellDropDownSelectionChanged">
            <Syncfusion:SfDataGrid.Columns>
                <Syncfusion:GridComboBoxColumn
                    ItemsSource="{Binding Setores}"
                    DisplayMemberPath="setor"
                    SelectedValuePath="codigo_setor"
                    HeaderText="SETOR" 
                    ColumnSizer="AutoWithLastColumnFill" 
                    MappingName="codigo_setor"/>
                <Syncfusion:GridCheckBoxColumn 
                    HeaderText="SELEÇÃO" 
                    ColumnSizer="SizeToHeader" 
                    MappingName="selesao"/>
            </Syncfusion:SfDataGrid.Columns>
        </Syncfusion:SfDataGrid>

        <StatusBar Grid.Row="1">
            <!--
            <StatusBarItem Grid.Column="1">
                <TextBlock Text="Precisona a tecla F3 no setor para inserir uma observação" FontWeight="Bold" />
            </StatusBarItem>
            -->
            <!--<Button Content="ADICIONAR SETOR" Click="OnAddSetor"/>-->
            <Button Content="GERAR O.S" Click="OnCreateOrdemServico"/>
            <Separator Width="1"/>
            <Button Content="IMPRIMIR O.S" Click="OnPrintOS"/>
        </StatusBar>

    </Grid>

</Window>
