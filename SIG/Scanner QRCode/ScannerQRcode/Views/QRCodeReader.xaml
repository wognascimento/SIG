<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScannerQRcode.Views.QRCodeReader"
             xmlns:viewmodel="clr-namespace:ScannerQRcode.ViewModels"
             x:DataType="viewmodel:QRCodeReaderViewModel"
             Title="Scannear Volumes">

    <StackLayout Padding="20" Spacing="20">

        <Label Text="Scannear Volumes"
                FontSize="25"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

        <Button Text="Endereçamento"
                FontSize="20"
                Command="{Binding GoEnderecamentoCommand}"/>

        <Button Text="Pré-conferências"
                FontSize="20"
                BackgroundColor="Maroon"
                Command="{Binding GoPreConferenciaCommand}"/>

        <Button Text="Carga Shopping"
                FontSize="20"
                BackgroundColor="Coral"
                Command="{Binding GoCargaShoppingCommand}"/>

        <Button Text="Retornar"
                FontSize="20"
                BackgroundColor="Grey"
                Command="{Binding GoBackCommand}"/>

    </StackLayout>
    
</ContentPage>