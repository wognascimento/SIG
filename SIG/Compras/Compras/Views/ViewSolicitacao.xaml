<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Compras.Views"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
             x:Class="Compras.Views.ViewSolicitacao"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">

            <syncfusion:SfTextInputLayout 
                Margin="5,0,5,0"
                HintFloatMode="Float"
                Hint="ID SOLICITAÇÃO"
                InputViewPadding="5"
                CharCountVisibility="Collapsed"
                HelperTextVisibility="Collapsed">
                <TextBox 
                    x:Name="IdSolicitacao" 
                    LostFocus="IdSolicitacao_LostFocus" 
                    PreviewKeyDown="IdSolicitacao_PreviewKeyDown" />
            </syncfusion:SfTextInputLayout>

            <syncfusion:SfTextInputLayout 
                Margin="5,0,5,0"
                HintFloatMode="Float"
                Hint="TIPO SOLICITAÇÃO"
                InputViewPadding="5"
                CharCountVisibility="Collapsed"
                HelperTextVisibility="Collapsed">
                <TextBox x:Name="TipoSolicitacao" IsEnabled="False"/>
            </syncfusion:SfTextInputLayout>

            <syncfusion:ButtonAdv 
                Content="ButtonAdv" 
                SizeMode="Normal" 
                Height="30" 
                Label="Novo" 
                SmallIcon="/Icones/icons8-abrir-em-janela-52.png"
                Width="78" 
                Click="OnCriarSolicitacao"/>

            <syncfusion:ButtonAdv x:Name="btnEnviar" 
                Margin="5,0,5,0"
                Content="ButtonAdv" 
                SizeMode="Normal" 
                Height="30" 
                Label="Enviar" 
                SmallIcon="/Icones/icons8-enviado-52.png"
                Width="78" 
                Click="OnEnviarSolicitacao"/>

        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical">

            <StackPanel Orientation="Horizontal">

                <syncfusion:SfTextInputLayout 
                    Margin="5,0,5,0"
                    Hint="ID PRODUTO"
                    InputViewPadding="5"
                    CharCountVisibility="Collapsed"
                    HelperTextVisibility="Collapsed" Width="217">
                    <TextBox 
                        x:Name="idProduto" 
                        PreviewKeyDown="idProduto_PreviewKeyDown"
                        LostFocus="idProduto_LostFocus"/>
                </syncfusion:SfTextInputLayout>

                <syncfusion:ButtonAdv 
                    x:Name="btnLocalizarProduto"
                    Content="ButtonAdv" 
                    SizeMode="Normal" 
                    Height="30" 
                    Label="Pesquisar"
                    SmallIcon="/Icones/icons8-pesquisar-52.png" 
                    LargeIcon="/Icones/icons8-pesquisar-104.png" Width="78" Click="OnListProdutos"/>

            </StackPanel>

            <StackPanel Orientation="Horizontal">

                <syncfusion:SfTextInputLayout 
                    InputViewPadding="3" 
                    Margin="5,0,5,0" 
                    HintFloatMode="Float" 
                    Hint="PLANILHA" 
                    Width="260" 
                    CharCountVisibility="Collapsed" 
                    HelperTextVisibility="Collapsed">
                    <syncfusion:ComboBoxAdv 
                        x:Name="cbPlanilha"
                        IsEditable="true"
                        AutoCompleteMode="Suggest"
                        ItemsSource="{Binding Planilhas}" 
                        SelectedItem="{Binding Planilha}"
                        DisplayMemberPath="planilha" 
                        SelectionChanged="OnSelectionCombo"/>
                </syncfusion:SfTextInputLayout>

                <syncfusion:SfTextInputLayout 
                    InputViewPadding="3" 
                    Margin="5,0,5,0" 
                    HintFloatMode="Float" 
                    Hint="DESCRIÇÃO" 
                    Width="450" 
                    CharCountVisibility="Collapsed" 
                    HelperTextVisibility="Collapsed">
                    <syncfusion:ComboBoxAdv 
                        x:Name="cbDescricao"
                        IsEditable="true"
                        AutoCompleteMode="Suggest"
                        ItemsSource="{Binding Produtos}" 
                        SelectedItem="{Binding Produto}"
                        DisplayMemberPath="descricao" 
                        SelectedValuePath="codigo" 
                        SelectionChanged="OnSelectionCombo"/>
                </syncfusion:SfTextInputLayout>

            </StackPanel>

            <StackPanel Orientation="Horizontal">

                <syncfusion:SfTextInputLayout 
                    InputViewPadding="3" 
                    Margin="5,0,5,0" 
                    HintFloatMode="Float" 
                    Hint="DESCRIÇÃO ADICIONAL" 
                    Width="260" 
                    CharCountVisibility="Collapsed" 
                    HelperTextVisibility="Collapsed">
                    <syncfusion:ComboBoxAdv 
                        x:Name="cbDescricaoAdicional"
                        IsEditable="true"
                        AutoCompleteMode="Suggest"
                        ItemsSource="{Binding DescAdicionais}" 
                        SelectedItem="{Binding DescAdicional}"
                        DisplayMemberPath="descricao_adicional" 
                        SelectionChanged="OnSelectionCombo"/>
                </syncfusion:SfTextInputLayout>

                <syncfusion:SfTextInputLayout 
                    InputViewPadding="3" 
                    Margin="5,0,5,0" 
                    HintFloatMode="Float" 
                    Hint="COMPLEMENTO ADICIONAL" 
                    Width="450" 
                    CharCountVisibility="Collapsed" 
                    HelperTextVisibility="Collapsed">
                    <syncfusion:ComboBoxAdv 
                        x:Name="cbComplementoAdicional"
                        IsEditable="true"
                        AutoCompleteMode="Suggest"
                        ItemsSource="{Binding CompleAdicionais}" 
                        SelectedItem="{Binding Compledicional}"
                        DisplayMemberPath="complementoadicional" 
                        SelectionChanged="OnSelectionCombo"/>
                </syncfusion:SfTextInputLayout>

                <syncfusion:SfTextInputLayout 
                    Margin="5,0,5,0"
                    HintFloatMode="Float"
                    Hint="UNIDADE"
                    InputViewPadding="5"
                    CharCountVisibility="Collapsed"
                    HelperTextVisibility="Collapsed">
                    <TextBox x:Name="unidade" IsEnabled="False" TextAlignment="Center" />
                </syncfusion:SfTextInputLayout>

            </StackPanel>

            <StackPanel Orientation="Horizontal">

                <syncfusion:SfTextInputLayout 
                    Margin="5,0,5,0"
                    HintFloatMode="Float"
                    Hint="QUANTIDADE"
                    InputViewPadding="5"
                    CharCountVisibility="Collapsed"
                    HelperTextVisibility="Collapsed">
                    <TextBox x:Name="txtQuantidade" TextAlignment="Center" />
                </syncfusion:SfTextInputLayout>

                <syncfusion:SfTextInputLayout 
                    Margin="5,0,5,0"
                    HintFloatMode="Float"
                    Hint="DATA UTILIZAÇÃO"
                    InputViewPadding="5"
                    CharCountVisibility="Collapsed"
                    HelperTextVisibility="Collapsed">
                    <syncfusion:DateTimeEdit 
                        x:Name="dtSolicitacao" 
                        NoneDateText=""
                        NullValue="{x:Null}" 
                        IsEmptyDateEnabled="True"
                        ShowMaskOnNullValue="True"/>

                </syncfusion:SfTextInputLayout>

                <syncfusion:SfTextInputLayout 
                    Margin="5,0,5,0"
                    HintFloatMode="Float"
                    Hint="PRIORIDADE"
                     Width="130"
                    InputViewPadding="5"
                    CharCountVisibility="Collapsed"
                    HelperTextVisibility="Collapsed">
                    <syncfusion:ComboBoxAdv 
                        x:Name="cbStatu"
                        AutoCompleteMode="Suggest"
                        ItemsSource="{Binding Status}" 
                        SelectedItem="{Binding Statu}"
                        DisplayMemberPath="status" />
                </syncfusion:SfTextInputLayout>

            </StackPanel>

            <syncfusion:SfTextInputLayout 
                    Margin="5,0,5,0"
                    HintFloatMode="Float"
                    Hint="OBSERVAÇÃO"
                    InputViewPadding="5"
                    CharCountVisibility="Collapsed"
                    HelperTextVisibility="Collapsed">
                <TextBox 
                    x:Name="txtObservacao" />
            </syncfusion:SfTextInputLayout>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,5" >

                <syncfusion:ButtonAdv x:Name="btnAdicionar" 
                    Margin="3,0,3,0"
                    Content="ButtonAdv" 
                    Width="70"
                    Label="Adicionar" 
                    SizeMode="Large" 
                    LargeIcon="/Icones/icons8-adicionar-linha-52.png" Click="OnGravarClick"/>

                <syncfusion:ButtonAdv x:Name="btnExcluir" 
                    Margin="3,0,3,0"
                    Content="ButtonAdv" 
                    Width="70"
                    Label="Excluir" 
                    SizeMode="Large"
                    LargeIcon="/Icones/icons8-excluir-linha-52.png" Click="OnExcluirItem"/>

                <syncfusion:ButtonAdv 
                    x:Name="btnApagar" 
                    Margin="3,0,3,0"
                    Content="ButtonAdv" 
                    Width="70"
                    Label="Limpar" 
                    SizeMode="Large"
                    LargeIcon="/Icones/icons8-apagador-52.png" Click="OnLimparClick"/>

            </StackPanel>



        </StackPanel>
        
        <syncfusion:SfDataGrid 
            x:Name="itensSolicitados"
            Grid.Row="2" 
            ItemsSource="{Binding ItensSolicitado}"
            SelectedItem="{Binding ItemSolicitado}" 
            ColumnSizer="AutoLastColumnFill" 
            AutoGenerateColumns="False">
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridTextColumn MappingName="familia"/>
                <syncfusion:GridTextColumn MappingName="planilha"/>
                <syncfusion:GridTextColumn MappingName="descricao_completa"/>
                <syncfusion:GridNumericColumn MappingName="qtde_solicitacao" HeaderText="qtde"/>
                <syncfusion:GridTextColumn MappingName="unidade" HeaderText="unid."/>
                <syncfusion:GridTextColumn MappingName="obs."/>
                <syncfusion:GridDateTimeColumn MappingName="data_utilizacao" HeaderText="utilização"/>
                <syncfusion:GridTextColumn MappingName="status"/>
            </syncfusion:SfDataGrid.Columns>
        </syncfusion:SfDataGrid>




    </Grid>
</UserControl>
